<div class="modal fade" id="tagModal<%= fav.id%>" tabindex="-1" role="dialog" aria-labelledby="tagModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tagModalLabel">Select favorite tags</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="tags-container-modal d-flex">
                    <% @tags.each do |tag|%>
                        
                        <div data-controller="favorite" class="text-right picto">
                            <% if fav.tags.include?(tag) %>
                                <% @favorite_spot_tag = FavoriteSpotTag.find_by tag_id: tag.id, favorite_spot_id: fav.id %>
                                <%= link_to tag.name , tag_favorite_spot_tag_path(tag_id: tag.id, id: @favorite_spot_tag.id), remote: true, method: :delete, class: "card-tags card-tags-favorite"  , data: { favoriteTag_target: 'favoriteBtn', action: "click->favorite#toggleTag" } %>
                            <% else %>
                                <%= link_to tag.name , tag_favorite_spot_tags_path(tag, fav: fav.id), remote: true, method: :post, class: "card-tags" , data: { favoriteTag_target: 'favoriteBtn', action: "click->favorite#toggleTag" } %>
                            <% end %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>