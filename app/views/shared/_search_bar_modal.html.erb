<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="search-bar-container">
          <%= simple_form_for :search, url: surf_spots_path, method: "GET", html: { class: 'search-bar' }  do |f| %>
            <%= f.input :location, placeholder: "Beach, coast, city...", class: "form-control"%>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <div><%= f.submit "Search", class: "btn btn-primary" %></div>
        <%= link_to "Explore the map", surf_spots_path, class:"btn btn-white btn-explore"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
