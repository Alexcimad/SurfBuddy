<div class="stat-container">
  <%# --------HOURS --------- %>
  <div>
    <ul class="nav sliderr">
      <% surf_spot.surf_conditions.each_with_index do |surf_condition,index| %>
        <% if index == 0 %>
          <% if surf_condition.level == "Beginner" %>
          <li><a class="active schedule green" data-toggle="tab" aria-current="page" href="#slot<%=index%>"><%= l surf_condition.start_hour.in_time_zone('Paris'), format: "%Hh"%></a></li>
          <% elsif surf_condition.level == "Intermediate" %>
          <li><a class="active schedule orange" data-toggle="tab" aria-current="page" href="#slot<%=index%>"><%= l surf_condition.start_hour.in_time_zone('Paris'), format: "%Hh"%></a></li>
          <% elsif surf_condition.level == "Expert" %>
          <li><a class="active schedule red" data-toggle="tab" aria-current="page" href="#slot<%=index%>"><%= l surf_condition.start_hour.in_time_zone('Paris'), format: "%Hh"%></a></li>
          <%end %>
        <% else %>
          <% if surf_condition.level == "Beginner" %>
          <li><a class="schedule green" data-toggle="tab" aria-current="page" href="#slot<%=index%>"><%= l surf_condition.start_hour.in_time_zone('Paris'), format: "%Hh"%></a></li>
          <% elsif surf_condition.level == "Intermediate" %>
          <li><a class="schedule orange" data-toggle="tab" aria-current="page" href="#slot<%=index%>"><%= l surf_condition.start_hour.in_time_zone('Paris'), format: "%Hh"%></a></li>
          <% elsif surf_condition.level == "Expert" %>
          <li><a class="schedule red" data-toggle="tab" aria-current="page" href="#slot<%=index%>"><%= l surf_condition.start_hour.in_time_zone('Paris'), format: "%Hh"%></a></li>
          <%end %>
        <%end%>
      <%end%>
    </ul>
  </div>
  <div class="tab-content">
    <% surf_spot.surf_conditions.each_with_index do |surf_condition,index| %>
      <% if index == 0 %>
      <div id="slot<%=index%>" class="tab-pane fade in active show">
      <% else %>
      <div id="slot<%=index%>" class="tab-pane fade">
      <% end %>
        <div class="surf-condition-card  align-self-start">
          <div class="d-flex justify-content-between">
            <p class="text-center"><%=icon('fas','wind')%><%= surf_condition.wind_speed %>kts</p>
            <p class="text-center"><%=icon('fas','location-arrow')%><%= surf_condition.wind_direction %></p>
            <p class="text-center"><%=icon('fas','water')%><%= surf_condition.wave.ceil(2) %>m</p>
          </div>
          <%# --------LEVEL --------- %>
          <div class="d-flex justify-content-between align-items-center ">
            <div class="hp-card-level"> 
              <div class="btn9"><%= surf_condition.level %> <span> <%=(surf_condition.rating/2) %> ðŸ¤™ </span></div>
            </div>            
          </div>
          <%= link_to 'Plan this surf session', surf_spot_surf_sessions_path(surf_spot,user_session: current_user.id, surf_cond: surf_condition.id), method: :post, class: "btn button-custom-large"  %>
        </div>

      </div>
    <%end%>
  </div>
</div>
  