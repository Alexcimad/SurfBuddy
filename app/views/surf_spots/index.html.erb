<header class="header">
  <%= render 'shared/search_bar' %>
</header>

<section>
    <div class="search row">

      <div class="map-right col-12 col-sm-6 col-md-8">
          <div id="map"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
      </div>

      <div class="spots-left col-6 col-md-4">
        <% @surf_spots.each do |spot| %>
            <%= render 'shared/card_spot', surf_spot: spot, user: current_user %>
          <% end %>
      </div>
    </div>

</section>
