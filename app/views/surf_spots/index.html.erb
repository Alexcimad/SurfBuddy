<header class="header">
			<div class="container">
				<input type="text" class="custom form-control mb-3" value="Hossegor">
				<div class="row">
					<div class="col-6">
						<input type="text" class="custom form-control mb-3" value="Intermediare">
					</div>
					<div class="col-6">
						<input type="text" class="custom form-control mb-3" value="1 - 9 pm">
					</div>
					<div class="col-12 text-center">
						<button class="btn btn__black">Search</button>
					</div>
				</div>
			</div>
</header>

<section class="section__spot">
	<div class="container">
		<h5 class="section__spot__heading">Your favorite spots</h5>

    <%= @surf_spots.each do |spot| %>
   	<%= render 'shared/card_spot', surf_spot: spot, user: current_user %>
		<% end %>		

    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
	</div>
</section>
