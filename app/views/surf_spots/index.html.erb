<header class="header">
  <%= render 'shared/search_bar' %>
</header>

<section class="section__spot">
	<div class="container">
		<h5 class="section__spot__heading">Your favorite spots</h5>

    <% @surf_spots.each do |spot| %>
   	<%= render 'shared/card_spot', surf_spot: spot, user: current_user %>
		<% end %>		

    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
	</div>
</section>
